																											
import random																											
																											
print("Let's play a game >:D")																											
																											
user_name = input("Hello human, what is your name?")																											
																											
print("Hello",user_name,".") #this is just introductory shit																											
																											
user_choice = '' #you have to first set user_choice to an empty string, because when it first enters the while loop it requires an assigned value																											
while (user_choice != "Rock" and #this whole section makes sure you spell Rock, Paper, or Scissors with capital first letters as well as correctly																											
user_choice != "Paper" and																											
user_choice != "Scissors"):																											
user_choice = input ("Rock, Paper, or Scissors? ")																											
																											
																											
print("Now it's my turn...") #here's where the computer makes its choice																											
																											
random_choice = random.randint(0, 2) #this whole section could have, alternatively, just been written using the random function, instead of assigning string values to integers 0, 1, and 2																											
																											
																											
if random_choice == 0:																											
computer_choice = "Rock"																											
																											
elif random_choice == 1:																											
computer_choice = "Paper"																											
																											
elif random_choice == 2:																											
computer_choice = "Scissors"																											
																											
print("I choose" , computer_choice)																											
																											
print (user_name, "chose" , user_choice, "and I have chosen", computer_choice)																											
																											
																											
																											
																											
if computer_choice == "Rock" and user_choice == "Scissors":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == "Paper" and user_choice == "Rock":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == "Scissors" and user_choice == "Paper":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == user_choice: #always remember that "==" means values are equal, whereas a single "=" is simply a form of declaratory assignment																											
																											
print ("DAMMIT, it's a draw :(")																											
print ("I want a rematch!")																											
print ("Wanna go again?")																											
enter_response = input()																											
																											
if (enter_response !="Yes" and																											
enter_response !="yes"):		#correction was made (a close quotation mark was added) after "yes" on 5.1.20																									
print("Fine whatever : P")																											
																											
else:																											
																											
print ("Alright, whatever, you won :P")																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
import random																											
																											
print("Let's play a game >:D")																											
																											
user_name = input("Hello human, what is your name?")																											
																											
print("Hello",user_name,".") #this is just introductory shit																											
																											
user_choice = '' #you have to first set user_choice to an empty string, because when it first enters the while loop it requires an assigned value																											
while (user_choice != "Rock" and #this whole section makes sure you spell Rock, Paper, or Scissors with capital first letters as well as correctly																											
user_choice != "Paper" and																											
user_choice != "Scissors"):																											
user_choice = input ("Rock, Paper, or Scissors? ")																											
																											
																											
print("Now it's my turn...") #here's where the computer makes its choice																											
choices = ['Rock', 'Paper', 'Scissors']																											
																											
computer_choice = random.choice(choices)																											
print("I choose" , computer_choice)																											
																											
print (user_name, "chose" , user_choice, "and I have chosen", computer_choice)																											
																											
																											
																											
																											
if computer_choice == "Rock" and user_choice == "Scissors":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == "Paper" and user_choice == "Rock":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == "Scissors" and user_choice == "Paper":																											
																											
print ("I win, I win, I ALWAYS win :D")																											
																											
elif computer_choice == user_choice: #always remember that "==" means values are equal, whereas a single "=" is simply a form of declaratory assignment																											
																											
print ("DAMMIT, it's a draw :(")																											
print ("I want a rematch!")																											
print ("Wanna go again?")																											
enter_response = input()																											
																											
if (enter_response !="Yes" and																											
enter_response !="yes"):		#correction was made (a close quotation mark was added) after "yes" on 5.1.20																									
print("Fine whatever : P")																											
																											
else:																											
																											
print ("Alright, whatever, you won :P")																											
																											
																											
#there's also this variation, where instead of using "computer_choice == user_choice", you instead use "if winner == 'tie':"																											
																											
																											
import random																											
																											
winner = ''																											
																											
random_choice = random.randint(0,2)																											
																											
computer_choice = random_choice #you had to add this line in order for the code to work; trying to interpret it exactly as the book is written results in an error messaging stating that "computer_choice is not defined"																											
																											
if random_choice == 0:																											
computer_choice = 'rock'																											
elif random_choice == 1:																											
computer_choice ='paper'																											
else:																											
computer_choice ='scissors'																											
																											
user_choice = input ('rock, paper or scissors? ')																											
																											
if computer_choice == user_choice:																											
winner = 'tie'  #remember that here, you are assigned the value of tie to winner whereas...																											
																											
elif computer_choice == 'paper' and user_choice =='rock':																											
winner = 'Computer'																											
elif computer_choice == 'rock' and user_choice == 'scissors':																											
winner = 'Computer'																											
elif computer_choice =='scissors' and user_choice == 'paper':																											
winner = 'Computer'																											
else: winner = 'User'																											
																											
if winner == 'tie': #here you are saying that the value of "winner" equals that of "tie"																											
																											
print('Its a tie! ')																											
																											
else:																											
																											
print('The', winner, 'wins! ')																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
																											
